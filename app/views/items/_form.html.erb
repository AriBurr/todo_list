<%= form_for @item do |f| %>
  <div class="form-group row">
    <div class="col-xs-4">
      <%= f.label :title %>
      <%= f.text_field :title, required: true, class: 'form-control'  %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-6">
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control'%>
    </div>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
  <%= link_to 'Cancel', items_path, class: 'btn btn-danger' %>
<% end %>
